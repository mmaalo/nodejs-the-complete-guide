<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <% if (products.length > 0) { %>
            <div class="grid">
                <% for (let element of products) { %>
                    <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%= element.title %></h1>
                            </header>
                            <div class="card__image">
                                <% if (typeof element.imageUrl != 'undefined' && element.imageUrl != '') { %>
                                    <img src="<%= element.imageUrl %>" alt="<%= element.title %>">
                                <% } else { %>
                                    <img src="https://upload.wikimedia.org/wikipedia/commons/a/ac/No_image_available.svg" alt="No Image Avalable">
                                <% } %>
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">
                                    <%if (Number.isFinite(parseFloat(element.price))) { %>
                                        <%=`$${element.price}`; %>
                                        <% } else { %>
                                            <%= 'Price On Request'; %>
                                        <% } %>
                                </h2>
                                <p class="product__discription">
                                    <%= element.description %>
                                </p>
                            </div>
                            <div class="card__actions">
                                <form action="/add-to-cart" method="POST">
                                    <button class="btn" type="submit">Add to Cart</button>
                                </form>
                            </div>
                        </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>