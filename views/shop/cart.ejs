<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
            <div class="grid">
                <% for (let element of cart) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= element.product.title%></h1>
                        </header>
                        <div class="card__image">
                            <% if (element.product.imageLink) { %>
                            <img src="<%= element.product.imageLink %>" alt="<%= element.product.imageAlt %>">
                            <% } else { %>
                            <img src="https://media.istockphoto.com/photos/open-book-picture-id495477978?k=6&m=495477978&s=612x612&w=0&h=e673w4tPLT2ZtJ62ytZcF_DBPxMBP57duHK0AFr6lQo=" alt="A Product" alt="Product Image">
                            <% } %>
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">$<%= element.product.price * element.amount %></h2>
                            <p class="product__discription"></p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
            <h1>No Items In Cart</h1>
    </main>
<%- include('../includes/end.ejs') %>