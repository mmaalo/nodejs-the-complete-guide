extends layouts/main-layout.pug

block content
    if (users.length > 0)
        if (exists == 'true')
            h3.text-red User already exists. Please try another user name.
            h3 Users:
                ul
                    each val in users
                        li= val.userName
        else
            h3 Users:
                ul
                    each val in users
                        li= val.userName
    else
        h3 There are no users yet